<Window x:Class="KuisDataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KuisDataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="5,0,-5,0">
        
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="10,142,0,0" VerticalAlignment="Top" Value="{Binding Path=header,Mode=TwoWay}"  Width="772"/>
        <Label x:Name="label" Content="{Binding Path=header,Mode=TwoWay}" HorizontalAlignment="Left" Margin="363,43,0,0" VerticalAlignment="Top" FontSize="48" FontWeight="Bold"/>

    </Grid>
</Window>
